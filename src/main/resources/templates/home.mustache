<body class="d-flex flex-column min-vh-100">

{{> layout/header}}

<div class="container mt-4">
    <div class="row">
        <!-- Left Column: Quick Actions + Subscriptions -->
        <div class="col-md-3">


            <h6>📅 Subscriptions</h6>
            {{#subscriptions}}
                <div class="border p-2 mb-2 rounded bg-light">
                    <strong>{{name}}</strong><br/>
                    ₩{{amount}}<br/>
                    {{reccurrent}}
                </div>
            {{/subscriptions}}
        </div>

        <!-- Right Column -->
        <div class="col-md-9">
            <!-- Accounts -->
            <h5 class="mb-3">🏦 Accounts</h5>
            <div class="row">
                {{#accounts}}
                    <div class="col-md-4 mb-3">
                        <div class="card border-dark">
                            <div class="card-body">
                                <h6 class="card-title">{{name}}</h6>
                                <p class="card-text">
                                    Balance: ₩{{balance}} <br/>
                                    Type: {{type}}
                                </p>
                            </div>
                        </div>
                    </div>
                {{/accounts}}
            </div>

            <!-- Transactions -->
            <h5 class="mt-4">💸 Expenses</h5>
            <ul class="list-group mb-3">
                {{#expenses}}
                    <li class="list-group-item d-flex justify-content-between">
                        {{description}} - ₩{{amount}} <span class="text-muted">{{date}}</span>
                    </li>
                {{/expenses}}
            </ul>

            <h5>💰 Incomes</h5>
            <ul class="list-group mb-3">
                {{#incomes}}
                    <li class="list-group-item d-flex justify-content-between">
                        {{description}} +₩{{amount}} <span class="text-muted">{{date}}</span>
                    </li>
                {{/incomes}}
            </ul>

            <h5>🔄 Transfers</h5>
            <ul class="list-group mb-3">
                {{#transfers}}
                    <li class="list-group-item">
                        ₩{{amount}} from {{fromAccount.name}} to {{toAccount.name}} ({{date}})
                    </li>
                {{/transfers}}
            </ul>

            <!-- Categories -->
            <h5 class="mt-4">📂 Categories</h5>
            <div class="row">
                {{#categories}}
                    <div class="col-md-4 mb-3">
                        <div class="border p-2 rounded">
                            <strong>{{name}}</strong><br/>
                            Type: {{type}}<br/>
                        </div>
                    </div>
                {{/categories}}
            </div>
        </div>
    </div>
</div>

{{> layout/footer}}

</body>
